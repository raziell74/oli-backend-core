{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  }
}
