{
  "name": "oli-backend-core",
  "version": "1.0.0",
  "description": "API backend that will handle core functionality of the OLI platform",
  "main": "index.js",
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "nodemon --legacy-watch --ext ts,graphql --exec ts-node index.ts",
    "test": "npm run tsc && jest --verbose --color --updateSnapshot",
    "tsc": "tsc --pretty",
    "lint": "eslint \"**/*.*(js|jsx|ts|tsx)\" --max-warnings 0 --color --format stylish",
    "lint:fix": "eslint \"**/*.*(js|jsx|ts|tsx)\" --max-warnings 0 --color --fix --format stylish",
    "format": "pretty-quick --verbose \"**/*.*(js|jsx|ts|tsx|scss|css|json)\"",
    "format:check": "pretty-quick --verbose --check \"**/*.*(js|jsx|ts|tsx|scss|css|json)\"",
    "husky:install": "npx husky install && npx husky add .husky/pre-commit 'npx lint-staged'"
  },
  "keywords": [],
  "author": "Jordan Richmeier",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "9.0.17",
    "apollo-server-express": "3.12.0",
    "axios": "1.3.4",
    "cors": "2.8.5",
    "express": "4.18.2",
    "graphql": "16.6.0",
    "graphql-subscriptions": "2.0.0",
    "graphql-ws": "5.12.0",
    "jsonwebtoken": "9.0.0",
    "jwt-decode": "3.1.2",
    "mongoose": "7.0.3",
    "redis": "4.6.5",
    "subscriptions-transport-ws": "0.11.0",
    "ws": "8.13.0"
  },
  "devDependencies": {
    "@types/connect-redis": "0.0.20",
    "@types/express": "4.17.17",
    "@types/express-session": "1.17.7",
    "@types/jest": "^29.5.0",
    "@types/node": "18.15.10",
    "@types/redis": "4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "2.0.22",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "supertest": "6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "**/*.{ts, tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/environment/**",
      "!**/schema/**",
      "!**/types/**",
      "!index.ts"
    ]
  },
  "lint-staged": {
    "**/*.{json,md,css,scss}": [
      "pretty-quick --verbose --staged --list-different"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "pretty-quick --verbose --staged --list-different",
      "eslint --max-warnings 0 --fix --color --format stylish",
      "jest --verbose --passWithNoTests --color --collectCoverageFrom --coverageReporters=text-summary --findRelatedTests"
    ]
  }
}
